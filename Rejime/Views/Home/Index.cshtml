@model Rejime.Models.User
@{
    ViewBag.Title = "Index";
}
<div class='alert alert-success offset-3 col-6 '> ثبت نام شما<strong> با موفقیت </strong>  انجام شد &nbsp;<span class='fa fa-check' style='font-size:28px'></span></div>

<div class="offset-3 col-6 pl-0 pr-0">
    <div class="card border-success mb-3 " >
        <div class="card-header " >تعیین نام کاربری و کلمه عبور <span class="fa fa-user-plus"></span></div>
        <div class="card-body text-success">
            @*<div class='alert alert-success col-12'> ثبت نام شما<strong> با موفقیت </strong>  انجام شد &nbsp;<span class='fa fa-check' style='font-size:28px'></span></div>*@
            @Html.AntiForgeryToken()
            <form action="/" method="post">
                <div class="row">
                    <div class="col-4">
                        <img src="~/Images/users_lock.png" class="img-fluid" />
                    </div>
                    <div class="col-8">
                        <div class="form-group row">
                            <div class="col-9">
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                            </div>
                            @Html.LabelFor(Model => Model.UserName, "نام کاربری*", new { @class = "col-3 col-form-label " })

                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class="Validate  col-9"})
                        </div>
                        <div class="form-group row">
                            <div class="col-9">
                                @Html.TextBoxFor(model => model.Passwords, new { @class = "form-control" })
                            </div>
                            @Html.LabelFor(Model => Model.Passwords, "کلمه عبور*", new { @class = "col-3 col-form-label" })

                            @Html.ValidationMessageFor(model => model.Passwords, "", new {  @class="Validate col-9"})
                        </div>
                        <button class="btn btn-danger"> تایید</button>
                    </div>
                </div>
       
           

</form>
        </div>
    </div>
</div>
