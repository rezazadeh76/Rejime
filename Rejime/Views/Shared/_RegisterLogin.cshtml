@model Rejime.Models.User
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<style>
    /* Change the white to any color ;) */
#exampleModal input:-webkit-autofill,
#exampleModal input:-webkit-autofill:hover,

#exampleModal input:-webkit-autofill:active {
    -webkit-box-shadow: 0 0 0 30px #edebd9 inset !important;
}
#exampleModal input:-webkit-autofill:focus{
        -webkit-box-shadow: 0 0 0 30px #edebd9 inset !important;

}
#exampleModal input:-webkit-autofill {
    -webkit-text-fill-color: #00848c !important;
}
</style>
<div class="modal fade Main_Div" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal body -->
            <div class="modal-body">

                <div class="form">
                    <div class="row">
                        <button type="button" class="close" data-dismiss="modal" style="margin-left: 95%;margin-top:-10px ">&times;</button>
                    </div>
                    <ul class="tab-group">
                        <li class="tab "><a href="#signup">ثبت نام</a></li>
                        <li class="tab active"><a href="#login">ورود  </a></li>
                    </ul>

                    <div class="tab-content">
                        @Html.AntiForgeryToken()
                        <div id="login">
                            <h3>ورود به حساب کاربری</h3>

                            <form>
                                <div class="field-wrap">
                                    @Html.LabelFor(Model => Model.UserName)
                                    @Html.TextBoxFor(model => model.UserName,new { @Value = ""})
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "Validate" })
                                </div>

                                <div class="field-wrap">
                                    @Html.LabelFor(Model => Model.Passwords)
                                    @Html.TextBoxFor(model => model.Passwords,new { @Value=""})
                                    @Html.ValidationMessageFor(model => model.Passwords, "", new { @class = "Validate" })
                                </div>

                                <p class="forgot"><a href="#">پسوردم را فراموش کردم</a></p>

                                <button class="button button-block"> ورود</button>

                            </form>

                        </div>
